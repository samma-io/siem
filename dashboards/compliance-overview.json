{
  "uid": "samma-compliance",
  "title": "Samma - Compliance Overview",
  "description": "Alert overview grouped by compliance frameworks (PCI DSS, GDPR, HIPAA, NIST 800-53, MITRE ATT&CK, TSC, GPG13)",
  "tags": ["samma", "compliance", "siem"],
  "timezone": "browser",
  "editable": true,
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Total Alerts",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "datasource": { "type": "elasticsearch", "uid": "samma-es-alerts" },
      "targets": [
        {
          "refId": "A",
          "metrics": [{ "type": "count", "id": "1" }],
          "query": "*",
          "timeField": "@timestamp"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["sum"] }
      }
    },
    {
      "id": 2,
      "title": "High Severity Alerts",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "datasource": { "type": "elasticsearch", "uid": "samma-es-alerts" },
      "targets": [
        {
          "refId": "A",
          "metrics": [{ "type": "count", "id": "1" }],
          "query": "rule.severity.keyword:high",
          "timeField": "@timestamp"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["sum"] }
      }
    },
    {
      "id": 3,
      "title": "Medium Severity Alerts",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "datasource": { "type": "elasticsearch", "uid": "samma-es-alerts" },
      "targets": [
        {
          "refId": "A",
          "metrics": [{ "type": "count", "id": "1" }],
          "query": "rule.severity.keyword:medium",
          "timeField": "@timestamp"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "orange", "value": 20 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["sum"] }
      }
    },
    {
      "id": 4,
      "title": "Unique Rules Triggered",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "datasource": { "type": "elasticsearch", "uid": "samma-es-alerts" },
      "targets": [
        {
          "refId": "A",
          "metrics": [{ "type": "cardinality", "id": "1", "field": "rule.name.keyword" }],
          "query": "*",
          "timeField": "@timestamp"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": { "calcs": ["sum"] }
      }
    },
    {
      "id": 5,
      "title": "Alerts by Severity",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "elasticsearch", "uid": "samma-es-alerts" },
      "targets": [
        {
          "refId": "A",
          "metrics": [{ "type": "count", "id": "1" }],
          "bucketAggs": [
            {
              "type": "terms",
              "id": "2",
              "field": "rule.severity.keyword",
              "settings": { "size": "10", "order": "desc", "orderBy": "_count" }
            }
          ],
          "query": "*",
          "timeField": "@timestamp"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "values": ["value", "percent"] },
        "pieType": "donut",
        "reduceOptions": { "calcs": ["sum"] }
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          { "matcher": { "id": "byName", "options": "high" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "medium" }, "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "low" }, "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "id": 6,
      "title": "Alert Timeline",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 4 },
      "datasource": { "type": "elasticsearch", "uid": "samma-es-alerts" },
      "targets": [
        {
          "refId": "A",
          "metrics": [{ "type": "count", "id": "1" }],
          "bucketAggs": [
            {
              "type": "terms",
              "id": "3",
              "field": "rule.severity.keyword",
              "settings": { "size": "5", "order": "desc", "orderBy": "_count" }
            },
            {
              "type": "date_histogram",
              "id": "2",
              "field": "@timestamp",
              "settings": { "interval": "auto" }
            }
          ],
          "query": "*",
          "timeField": "@timestamp"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "stacking": { "mode": "normal" },
            "fillOpacity": 80
          }
        },
        "overrides": [
          { "matcher": { "id": "byName", "options": "high" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "medium" }, "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "low" }, "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }] }
        ]
      }
    },
