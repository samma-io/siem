      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 28 },
      "datasource": { "type": "elasticsearch", "uid": "samma-es-alerts" },
      "targets": [
        {
          "refId": "A",
          "metrics": [
            {
              "type": "raw_data",
              "id": "1",
              "settings": { "size": "50" }
            }
          ],
          "query": "rule.name:*",
          "timeField": "@timestamp"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "includeByName": {
              "@timestamp": true,
              "rule.name": true,
              "rule.description": true,
              "rule.severity": true,
              "rule.compliance.pci_dss": true,
              "rule.compliance.mitre": true,
              "rule.compliance.nist_800_53": true,
              "subject": true
            },
            "indexByName": {
              "@timestamp": 0,
              "rule.severity": 1,
              "rule.name": 2,
              "rule.description": 3,
              "rule.compliance.mitre": 4,
              "rule.compliance.pci_dss": 5,
              "rule.compliance.nist_800_53": 6,
              "subject": 7
            },
            "renameByName": {
              "@timestamp": "Time",
              "rule.name": "Rule",
              "rule.description": "Description",
              "rule.severity": "Severity",
              "rule.compliance.pci_dss": "PCI DSS",
              "rule.compliance.mitre": "MITRE",
              "rule.compliance.nist_800_53": "NIST",
              "subject": "NATS Subject"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Severity" },
            "properties": [
              {
                "id": "mappings",
                "value": [
                  { "type": "value", "options": { "high": { "text": "HIGH", "color": "red" } } },
                  { "type": "value", "options": { "medium": { "text": "MEDIUM", "color": "orange" } } },
